@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model KullanicidanVeriAlmaYöntemleri.Models.Product

client tabanlaı validationslar için ilgili viewa gerekli kütüphaneleri vermemiz lazım
client tabanlı validationslar bizim sunucumuza istek gelmeden tarayıcıda(client) doğrulama yapar.

    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


<div asp-validation-summary="All">

</div>

<form asp-action="CreateProductValidations" asp-controller="Validations" method="post">
    <input type="text" asp-for="Name" placeholder="Product Name"/> 
    <span asp-validation-for="Name"> </span><br />
    
    
    <input type="number" asp-for="Quantity" placeholder="Product Quantity" />
    <span asp-validation-for="Quantity"> </span> <br />
    
    
    <input type="email" asp-for="Email" placeholder=" Email" />
    <span asp-validation-for="Email"> </span> <br />
    
    <button>Gönder</button>
</form>